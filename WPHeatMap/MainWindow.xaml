<Window x:Class="WPHeatMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPHeatMap"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <DockPanel Background="Transparent">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Label>Start</Label>
            <Slider Height="23" Name="slider_start" Width="100" />
            <Label>End</Label>
            <Slider Height="23" Name="slider_end" Width="100" />
            <Button Click="Button_Click">Go</Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button>Hello</Button>
        </StackPanel>
        <Image Name="img" Width="400" Height="200"/>
    </DockPanel>
</Window>
